<div class="container">
  <h1 class="text-center">Articles</h1>
  <div class="row justify-content-center">
    <% @articles.each do |article| %>
      <div class="col-md-4">
        <div class="card mb-3">
          <div class="card-body">
            <h5 class="card-title"><%= link_to article.title, article %></h5>
            <p class="card-text"><%= truncate(article.body, length: 100) %></p>
            <div class="text-center">
              <%= link_to "Edit", edit_article_path(article), class: "btn btn-sm btn-primary mr-1" %>
              <%= link_to "Destroy", article_path(article), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-sm btn-danger" %>
              <%= link_to "New Article", new_article_path, class: "btn btn-primary new-article-btn" %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>


