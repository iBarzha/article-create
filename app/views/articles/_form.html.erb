<%= form_with model: article, local: true do |form| %>

  <div class="form-group">
    <%= form.label :title %>
    <%= form.text_field :title, class: 'form-control', placeholder: 'Enter title' %>
    <% article.errors.full_messages_for(:title).each do |message| %>
      <div class="text-danger"><%= message %></div>
    <% end %>
  </div>

  <div class="form-group">
    <%= form.label :body %>
    <%= form.text_area :body, class: 'form-control body-field', placeholder: 'Enter body' %>
    <% article.errors.full_messages_for(:body).each do |message| %>
      <div class="text-danger"><%= message %></div>
    <% end %>
  </div>

  <div class="form-group">
    <%= form.label :status, class: "form-label" %><br>
    <%= form.select :status, options_for_select(Visible::VALID_STATUSES.reject(&:blank?), 'public'), {}, class: 'form-control form-control-sm' %>
  </div>

  <div class="form-group">
    <%= form.submit "Submit", class: 'btn btn-primary' %>
  </div>

<% end %>
